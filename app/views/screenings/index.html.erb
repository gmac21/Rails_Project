<p id="notice"><%= notice %></p>

<h1>Listing Screenings</h1>

<table>
  <thead>
    <tr>
      <th>Theatre</th>
      <th>Movie</th>
      <th>Seats</th>
      <th>Handicap accesibility</th>
      <th>Scree size</th>
      <th>Date start showing</th>
      <th>Date end showing</th>
      <th>Time showing</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @screenings.each do |screening| %>
      <tr>
        <td><%= screening.theatre.name %></td>
        <td><%= screening.movie.title %></td>
        <td><%= screening.seats %></td>
        <td><%= screening.handicap_accesibility %></td>
        <td><%= screening.scree_size %></td>
        <td><%= screening.date_start_showing %></td>
        <td><%= screening.date_end_showing %></td>
        <td><%= screening.time_showing %></td>
        <td><%= link_to 'Show', screening %></td>
        <td><%= link_to 'Edit', edit_screening_path(screening) %></td>
        <td><%= link_to 'Destroy', screening, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

